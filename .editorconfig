root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{adoc,json,yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
